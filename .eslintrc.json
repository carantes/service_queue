{
    "parser": "babel-eslint",
    "plugins": [
        "babel"
    ],
    "env": {
        "es6": true,
        "node": true
    },
    "globals": {
        "localStorage": true,
        "test": true,
        "expect": true,
        "fetch": true,
        "describe": true,
        "it": true,
        "document": true,
        "window": true,
        "jest": true,
        "beforeEach": true
    },
    "rules": {
        "indent": [1, 4, { "SwitchCase": 1 }],
        "linebreak-style": [0],
        "no-multi-assign": [0],
        "no-unused-expressions": [2, { "allowShortCircuit": true, "allowTernary": true }],
        "no-unused-vars": [1],
        "no-param-reassign": [0]
    },
    "extends": "airbnb"
}